{% extends 'base.html.twig' %}

{% block title %}Rol index{% endblock %}

{% block body %}
<body >
    <header>
    {{ parent() }}
    </header>

    
    <div class="container-fluid" style="padding:60px" >
        <h5>Roles</h5>
        <table class="table table-bordered table-sm" style="border: 2px solid #E8550F">
            <thead>
                <tr  class="table" style="background-color: #FFA37E; border: 2px solid #E8550F">
                    <th>Tipo de Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for rol in rols %}
                <tr>
                    <td>{{ rol.title }}</td>
                    <td style:>
                        <a href="{{ path('app_rol_show', {'id': rol.id}) }}" class="btn btn-md" style="background-color: #020100; color: #ffffff">mostrar</a>
                        <a href="{{ path('app_rol_edit', {'id': rol.id}) }}" class="btn  btn-md" style="background-color: #020100; color: #ffffff">editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_rol_new') }}"  class="btn btn-md" style="background-color: #020100; color: #ffffff">Crear Nuevo</a>
        </div>  
    </body>
{% endblock %}
