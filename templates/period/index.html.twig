{% extends 'base.html.twig' %}

{% block title %}Período de prueba{% endblock %}

{% block body %}
<header>
    {{ parent() }}
</header>

<h5 class="m-4">Períodos de prueba</h5>

<div class="container-fluid container-sm text-center" style="padding:30px" >
    
    <table class="table table-bordered table-sm" style="border: 2px solid #E8550F">
        <thead>
            <tr class="table" style="background-color: #FFA37E; border: 2px solid #E8550F">
                <th>Duración del período</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for period in periods %}
            <tr>
                <td>{{ period.title }}</td>
                <td>
                    <a href="{{ path('app_period_show', {'id': period.id}) }}" class="btn btn-md" style="background-color: #020100; color: #ffffff">mostrar</a>
                    <a href="{{ path('app_period_edit', {'id': period.id}) }}" class="btn btn-md" style="background-color: #020100; color: #ffffff">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No se han encontrado registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_period_new') }}" class="btn btn-md m-4" style="background-color: #020100; color: #ffffff">Crear nuevo período</a>

</div>

{% endblock %}
