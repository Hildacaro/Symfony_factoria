{% extends 'base.html.twig' %}

{% block title %}Employee index{% endblock %}


{% block body %}
<body >
<header>
   {{ parent() }}
</header>
    <section style="padding:60px">
        <div class="container-fluid" >
        <h5>Tabla Empleados</h5>
        <table class="table table-bordered table-sm" style="border: 2px solid #E8550F" >
            <thead "table-employee">
                <tr class="table" style="background-color: #FFA37E; border: 2px solid #E8550F" >
                    <th>Foto</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>NÂº de identificador</th>
                    <th>Rol</th>
                    <th>Estados</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for employee in employees %}
                <tr style="border: 2px solid #E8550F">
                    <td>
                        <img src= "{{ asset('uploads/photo/'~ employee.photo) }}" alt="{{ employee.name }}" width='30'>
                    </td>
                    <td>{{ employee.name }}</td>
                    <td>{{ employee.lastname }}</td>
                    <td>{{ employee.identifying }}</td>
                    <td>{{ employee.rol }}</td>
                    <td>{{ employee.status }}</td>

                    <td>
                        <a href="{{ path('app_employee_show', {'id': employee.id}) }}" class="btn btn-md" style="background-color: #020100; color: #ffffff">mostrar</a>
                        <a href="{{ path('app_employee_edit', {'id': employee.id})  }}"  class="btn btn-md" style="background-color: #020100; color: #ffffff">editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
            </table>

            <a href="{{ path('app_employee_new') }}" class="btn btn-md" style="background-color: #020100; color: #ffffff">Crear nuevo</a>
        </div>
        </section>
    </body>

{% endblock %}
