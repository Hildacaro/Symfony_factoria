{% extends 'base.html.twig' %}

{% block title %}Employee index{% endblock %}

{% block body %}
    <h1>Employee index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Identifying</th>
                <th>Position</th>
                <th>Area</th>
                <th>School</th>
                <th>Start_date</th>
                <th>Finish_date</th>
                <th>Type_of_contract</th>
                <th>Manager</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
            <tr>
                <td>{{ employee.id }}</td>
                <td>{{ employee.name }}</td>
                <td>{{ employee.lastname }}</td>
                <td>{{ employee.email }}</td>
                <td>{{ employee.roles }}</td>
                <td>{{ employee.identifying }}</td>
                <td>{{ employee.position }}</td>
                <td>{{ employee.area }}</td>
                <td>{{ employee.school }}</td>
                <td>{{ employee.startDate ? employee.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ employee.finishDate ? employee.finishDate|date('Y-m-d') : '' }}</td>
                <td>{{ employee.typeOfContract }}</td>
                <td>{{ employee.manager }}</td>
                <td>{{ employee.photo }}</td>
                <td>
                    <a href="{{ path('app_employee_show', {'id': employee.id}) }}">show</a>
                    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_employee_new') }}">Create new</a>
{% endblock %}
