<form method="post" action="{{ path('app_status_delete', {'id': status.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ status.id) }}">
    <button class="btn btn-sm m-4" style="background-color:#FE4700; color: #ffffff">Eliminar</button>
</form>
