{% extends 'base.html.twig' %}

{% block title %}Áreas{% endblock %}

{% block body %}
<header>
    {{ parent() }}
</header>

<h5 class="m-4">Áreas</h5>

    <div class="container-fluid container-sm" style="padding:30px">
        <div style="display: flex; justify-content: center">
            <table class="table table-bordered table-sm" style="border: 2px solid #E8550F; width: 40%">
                <tbody>
                    <tr>
                        <th style="background-color: #FFA37E">Título</th>
                        <td>{{ area.title }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div> 
    <div style="display: flex; justify-content: center; width: 100%">   

        <a href="{{ path('app_area_index') }}" class="btn btn-sm m-4" style="background-color: #020100; color: #ffffff">Volver a la lista</a>

        <a href="{{ path('app_area_edit', {'id': area.id}) }}" class="btn btn-sm m-4" style="background-color: #020100; color: #ffffff">Editar</a>
    </div>

     <div style= "justify-content: center;display: flex">
        {{ include('area/_delete_form.html.twig') }}
    </div>

{% endblock %}
