{% extends 'base.html.twig' %}

{% block title %}Area index{% endblock %}

{% block body %}
<header>
    {{ parent() }}
</header>

<h5 class="m-4">Áreas</h5>

    <div class="container-fluid container-sm text-center" style="padding:30px" >
        
        <table class="table table-bordered table-sm" style="border: 2px solid #E8550F">
            <thead>
                <tr class="table" style="background-color: #FFA37E; border: 2px solid #E8550F">
                    <th>Título</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for area in areas %}
                    <tr>
                        <td>{{ area.title }}</td>
                        <td>
                            <a href="{{ path('app_area_show', {'id': area.id}) }}" class="btn btn-md" style="background-color: #020100; color: #ffffff">mostrar</a>
                            <a href="{{ path('app_area_edit', {'id': area.id}) }}" class="btn btn-md" style="background-color: #020100; color: #ffffff">editar</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No se encontraron registros</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    
        <a href="{{ path('app_area_new') }}" class="btn btn-md m-4" style="background-color: #020100; color: #ffffff">Crear nueva área</a>
    
    </div>
    
{% endblock %}
