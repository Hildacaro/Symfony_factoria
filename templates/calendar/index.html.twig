{% extends 'base.html.twig' %}

{% block title %}Calendario{% endblock %}

{% block body %}
<header>
   {{ parent() }}
</header>

<h5 class="m-4">Eventos del calendario</h5>
    <section style="padding:30px">
        <div class="container-fluid container-sm text-center">
                <table class="table table-bordered table-sm" style="border: 2px solid #E8550F">
                    <thead>
                        <tr class="table" style="background-color: #FFA37E; border: 2px solid #E8550F">
                            <th>TÃ­tulo</th>
                            <th>Fecha de Inicio</th>
                            <th>Fecha fin</th>
                            <th>Destinatario</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for calendar in calendars %}
                            <tr style="border: 2px solid #E8550F">
                                <td>{{ calendar.title }}</td>
                                <td>{{ calendar.startDate ? calendar.startDate|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ calendar.finishDate ? calendar.finishDate|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ calendar.recipient }}</td>
                                <td>
                                    <a href="{{ path('app_calendar_show', {'id': calendar.id}) }}" class="btn btn-sm" style="background-color: #020100; color: #ffffff">mostrar</a>
                                    <a href="{{ path('app_calendar_edit', {'id': calendar.id}) }}" class="btn btn-sm" style="background-color: #020100; color: #ffffff">editar</a>
                                </td>
                            </tr>
                        {% else %}
                        <tr>
                            <td colspan="6">No se encontraron registros</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            <a href="{{ path('app_calendar_new') }}" class="btn btn-sm m-4" style="background-color: #020100; color: #ffffff" >Crear nuevo evento</a>
        
        </div>
        
     </section>

{% endblock %}
