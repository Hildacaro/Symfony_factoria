{% extends 'base.html.twig' %}

{% block title %}Calendario{% endblock %}

{% block body %}
<body >
<header>
   {{ parent() }}
</header>

<h5 class="m-4">Eventos calendario</h5>

    <section style="padding:30px">

        <div class="container-fluid container-sm" >

            <table class="table table-bordered table-sm" style="border: 2px solid #E8550F" >
                <tbody>
                    <tr class="table" style="background-color: #FFA37E; border: 2px solid #E8550F">
                        <th>Asunto</th>
                        <td>{{ calendar.title }}</td>
                    </tr>
                    <tr>
                        <th>Fecha de inicio</th>
                        <td>{{ calendar.startDate ? calendar.startDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Fecha fin</th>
                        <td>{{ calendar.finishDate ? calendar.finishDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Destinatario</th>
                        <td>{{ calendar.recipient }}</td>
                    </tr>
                </tbody>
            </table>

        </div>    

    </section>    

    <a href="{{ path('app_calendar_index') }}" class="btn btn-md m-4" style="background-color: #020100; color: #ffffff">Volver a la lista</a>

    <a href="{{ path('app_calendar_edit', {'id': calendar.id}) }}" class="btn btn-md m-4" style="background-color: #020100; color: #ffffff">Editar</a>

    {{ include('calendar/_delete_form.html.twig') }}    

{% endblock %}
