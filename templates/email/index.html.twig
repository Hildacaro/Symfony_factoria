{% extends 'base.html.twig' %}

{% block title %}Envío correos electrónicos{% endblock %}

{% block body %}

{{ parent() }}

<div class="row">
    <div class="col-sm-6">
        <div class="card position-absolute top-50 start-50 translate-middle">
            <div class="card-body">
                <h5 class="card-title">CORREO DE AUTOEVALUACIÓN PARA TRABAJADOR</h5>
                    <p class="card-text">Por favor, introduce la dirección de correo electrónico para enviar un correo al trabajador con un link a su autoevaluación:</p>

                        {{ form_start(form) }}

                            {{ form_row(form.email)}}
                            {{ form_row(form.send_email)}}

                                {% for label, messages in app.flashes %}
                                    {% for message in messages %}
                                        <div class="alert alert-{{ label }}">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                {% endfor %}

                            {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
