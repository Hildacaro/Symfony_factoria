{% extends 'base.html.twig' %}

{% block title %}Contrato{% endblock %}

{% block body %}
<header>
    {{ parent() }}
</header>

<h5 class="m-4">Tipo de Contrato</h5>

    <div class="container-fluid" style="padding:30px" >

        <table class="table table-bordered" style="border: 2px solid #E8550F">
            <thead>
                <tr>
                    <th style="background-color: #FFA37E">Tipo de contrato</th>
                    <td>{{ contract.title }}</td>
                </tr> 
            </thead>
        </table>
        

        <a href="{{ path('app_contract_index') }}" class="btn btn-md m-4" style="background-color: #020100; color: #ffffff">Volver a la lista</a>

        <a href="{{ path('app_contract_edit', {'id': contract.id}) }}" class="btn btn-md m-4" style="background-color: #020100; color: #ffffff">Editar</a>

        {{ include('contract/_delete_form.html.twig') }}

    </div>

{% endblock %}
