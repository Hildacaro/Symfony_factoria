{% extends 'base.html.twig' %}

{% block title %}Contract index{% endblock %}

{% block body %}
   <header>
        {{ parent() }}
    </header>
        <div class="container-fluid" style="padding:60px" >
         <h5>Tipo de Contrato</h5>
    

    <table class="table table-bordered table-sm" style="border: 2px solid #E8550F">
        <thead>
            <tr class="table" style="background-color: #FFA37E; border: 2px solid #E8550F">
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contract in contracts %}
            <tr>
                <td>{{ contract.id }}</td>
                <td>{{ contract.title }}</td>
                <td>
                    <a href="{{ path('app_contract_show', {'id': contract.id}) }}" class="btn btn-md" style="background-color: #020100; color: #ffffff">mostrar</a>
                    <a href="{{ path('app_contract_edit', {'id': contract.id}) }}" class="btn btn-sm" style="background-color:#FE4700">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contract_new') }}" class="btn btn-md" style="background-color: #020100; color: #ffffff">Crear nuevo</a>
{% endblock %}
